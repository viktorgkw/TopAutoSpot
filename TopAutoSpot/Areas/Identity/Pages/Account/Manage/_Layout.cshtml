@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="mt-3 mb-3">
    <h1 class="fw-bold text-capitalize pt-1 pb-1 mb-3 website-text-darker-nohover">Account Management</h1>
    <hr />
    <br />

    <div>
        <img class="custom-rounded account-management-image mb-4" src="~/gifs/accountManagement.gif" alt="Account Management Gif" />
    </div>

    <hr />
    <br />

    <div>
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <br />
    <hr />
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
