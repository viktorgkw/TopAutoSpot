@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h2 class="fw-bold mb-3 text-danger">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6 mx-auto">
        <h4 class="fw-bold text-danger">Your account contains personal data that you have given us.</h4>
        <br />
        <h4 class="fw-bold text-danger">Deleting this data will permanently remove your account, and this cannot be recovered.</h4>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger fw-bold mt-3">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
