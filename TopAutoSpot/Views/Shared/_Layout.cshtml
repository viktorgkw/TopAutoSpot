@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    @*Metadata*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @*Website Title*@
    <title>@ViewData["Title"] - TopAutoSpot</title>

    @*Bootstrap and CSS linking*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TopAutoSpot.styles.css" asp-append-version="true" />

    @*Font*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light bg-nav-button fw-bold rounded px-3 mx-1" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light bg-nav-button fw-bold rounded px-3 mx-1" asp-page="/Buy/Index">Buy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light bg-nav-button fw-bold rounded px-3 mx-1" asp-page="/Trade/Index">Trade</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light bg-nav-button fw-bold rounded px-3 mx-1" asp-page="/Auction/Index">Auction</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light bg-nav-button fw-bold rounded px-3 mx-1" asp-page="/MyListings/Index">My Listings</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 mx-auto text-center">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light bg-dark">
        <div class="row mt-4 md-4 g-0">
            <div class="col-md-1 mx-auto fw-bold">
                <div>
                    <ul class="list-type">
                        <li>
                            <a class="text-decoration-none footer-text" asp-page="/Contacts/Index">Contacts</a>
                        </li>
                        <li>
                            <a class="text-decoration-none footer-text" asp-page="/PrivacyPolicy/Index">Privacy Policy</a>
                        </li>
                        <li>
                            <a class="text-decoration-none footer-text" asp-page="/PersonalData/Index">Personal Data</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-md-1 mx-auto">
                <div>
                    <a href="https://www.facebook.com"><img class="w-25 h-25 m-2" src="~/images/socialmedialogos/facebooklogo.png" /></a>
                    <a href="https://www.instagram.com"><img class="w-25 h-25 m-2" src="~/images/socialmedialogos/instagramlogo.png" /></a>
                </div>
            </div>

            <div class="col-md-1 mx-auto fw-bold">
                <div>
                    <a class="text-decoration-none footer-text" href="#">2022 &copy; TopAutoSpot</a>
                    <br />
                    <a class="text-decoration-none footer-text" href="#">Bulgaria, Burgas (8000)</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
