@page
@model TopAutoSpot.Views.VehiclePreview.MotorcyclePreviewModel
@{
    var ownerFullName = Model.GetOwnerFullName();
    var ownerNumber = Model.GetOwnerNumber();
}

<h1 class="fw-bold site-text-darker-color">@Model.Motorcycle.Title</h1>
<h2 class="fw-bold site-text-darker-color">@Model.Motorcycle.Make @Model.Motorcycle.Model</h2>
<hr />
<br />

<div class="d-flex flex-row justify-content-center mb-5">
    <div class="column mx-5">
        <img class="border border-dark rounded preview-vehicle-image" src="~/images/noImageFound.png" />
    </div>

    <div class="d-flex flex-column column mx-5 justify-content-center">
        <p class="fw-bold site-text-color fs-4">Price: @Model.Motorcycle.Price</p>
        <p class="fw-bold site-text-color fs-4">Listing Created At: @Model.Motorcycle.CreatedAt.ToString("MM/dd/yyyy")</p>
        <p class="fw-bold site-text-color fs-4">Location: @Model.Motorcycle.Location</p>
        <p class="fw-bold site-text-color fs-4">Manufacture Date: @Model.Motorcycle.ManufactureDate.ToString("MM/dd/yyyy")</p>
        @if (Model.Motorcycle.Mileage != null)
        {
            <p class="fw-bold site-text-color fs-4">Mileage: @Model.Motorcycle.Mileage</p>
        }
        @if (Model.Motorcycle.HorsePower != null)
        {
            <p class="fw-bold site-text-color fs-4">Horse Power: @Model.Motorcycle.HorsePower</p>
        }
        <p class="fw-bold site-text-color fs-4">Cubic Capacity: @Model.Motorcycle.CubicCapacity</p>
        <p class="fw-bold site-text-color fs-4">Transmission: @Model.Motorcycle.Transmission</p>
        <p class="fw-bold site-text-color fs-4">Engine Type: @Model.Motorcycle.EngineType</p>
        <p class="fw-bold site-text-color fs-4">Engine Strokes: @Model.Motorcycle.EngineStrokes</p>
        <p class="fw-bold site-text-color fs-4">Cooling Type: @Model.Motorcycle.CoolingType</p>
    </div>
</div>

@if (Model.Motorcycle.Description != null && Model.Motorcycle.Description != "")
{
    <p class="fw-bold site-text-darker-color fs-3">Description</p>
    <div class="border border-dark text-start mb-4">
        @if (Model.Motorcycle.Description[Model.Motorcycle.Description.Length - 1].ToString() != ".")
        {
            <p class="fw-bold site-text-color fs-5 px-2 pt-2 pb-2">@Model.Motorcycle.Description.</p>
        }
        else
        {
            <p class="fw-bold site-text-color fs-5 px-2 pt-2 pb-2">@Model.Motorcycle.Description</p>
        }
    </div>
}

<div class="mt-5">
    <h2 class="site-text-darker-color fw-bold fs-3">Vehicle Owner Info</h2>
    <p class="fw-bold site-text-color fs-5">@ownerFullName</p>
    @if (ownerNumber != null)
    {
        <p class="fw-bold site-text-color fs-5">Phone Number: @ownerNumber</p>
    }
</div>