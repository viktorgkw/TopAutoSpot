@page
@model TopAutoSpot.Views.VehiclePreview.BoatPreviewModel

<h1 class="fw-bold text-dark">@Model.Boat.Title</h1>
<h2 class="fw-bold website-text-nohover">@Model.Boat.Make @Model.Boat.Model</h2>
<hr />
<br />

<div class="d-flex flex-row justify-content-center mb-5">
    @if (!Model.HasAnyImages())
    {
        <div class="column mx-5">
            <img class="border border-dark rounded preview-vehicle-image" src="~/images/noImageFound.png" />
        </div>
    }
    else
    {
        <div class="column mx-5">
            <img class="border border-dark rounded preview-vehicle-image" src="@Model.GetImage()" />
        </div>
    }


    <div class="d-flex flex-column column mx-5 justify-content-center">
        <p class="fw-bold website-text-nohover fs-4">Price: <i class="text-dark">@Model.Boat.Price</i></p>
        <p class="fw-bold website-text-nohover fs-4">Listing Created At: <i class="text-dark">@Model.Boat.CreatedAt.ToString("MM/dd/yyyy")</i></p>
        <p class="fw-bold website-text-nohover fs-4">Location: <i class="text-dark">@Model.Boat.Location</i></p>
        <p class="fw-bold website-text-nohover fs-4">Manufacture Date: <i class="text-dark">@Model.Boat.ManufactureDate.ToString("MM/dd/yyyy")</i></p>
        @if (Model.Boat.HorsePower != null)
        {
            <p class="fw-bold website-text-nohover fs-4">Horse Power: <i class="text-dark">@Model.Boat.HorsePower</i></p>
        }
        <p class="fw-bold website-text-nohover fs-4">Engine Type: <i class="text-dark">@Model.Boat.EngineType</i></p>
        <p class="fw-bold website-text-nohover fs-4">Engine Count: <i class="text-dark">@Model.Boat.EngineCount</i></p>
        <p class="fw-bold website-text-nohover fs-4">Width: <i class="text-dark">@Model.Boat.Width</i></p>
        <p class="fw-bold website-text-nohover fs-4">Length: <i class="text-dark">@Model.Boat.Length</i></p>
        @if (Model.Boat.Material != null)
        {
            <p class="fw-bold website-text-nohover fs-4">Material: <i class="text-dark">@Model.Boat.Material</i></p>
        }
    </div>
</div>

@if (Model.Boat.Description != null && Model.Boat.Description != "")
{
    <p class="fw-bold text-dark fs-3">Description</p>
    <div class="border border-dark text-start mb-4">
        @if (Model.Boat.Description[Model.Boat.Description.Length - 1].ToString() != ".")
        {
            <p class="fw-bold website-text-nohover fs-5 px-2 pt-2 pb-2">@Model.Boat.Description.</p>
        }
        else
        {
            <p class="fw-bold website-text-nohover fs-5 px-2 pt-2 pb-2">@Model.Boat.Description</p>
        }
    </div>
}

<div class="mt-5">
    <h2 class="text-dark fw-bold fs-3">Vehicle Owner Info</h2>
    <p class="fw-bold website-text-nohover fs-5">@Model.GetOwnerFullName()</p>
    @if (Model.GetOwnerNumber() != null)
    {
        <p class="fw-bold website-text-nohover fs-5">Phone Number: @Model.GetOwnerNumber()</p>
    }
</div>

<div class="mt-5">
    <h2 class="text-dark fw-bold fs-3">All Listing Images</h2>

    <div>
        @foreach (var image in Model.Images)
        {
            <img class="preview-vehicle-list-images" src="@Model.GetImageSource(image)" />
        }
    </div>
</div>