@page
@model TopAutoSpot.Views.VehiclePreview.BusPreviewModel
@{
    var ownerFullName = Model.GetOwnerFullName();
    var ownerNumber = Model.GetOwnerNumber();
}

<h1 class="fw-bold site-text-darker-color">@Model.Bus.Title</h1>
<h2 class="fw-bold site-text-darker-color">@Model.Bus.Make @Model.Bus.Model</h2>
<hr />
<br />

<div class="d-flex flex-row justify-content-center mb-5">
    <div class="column mx-5">
        <img class="border border-dark rounded preview-vehicle-image" src="~/images/noImageFound.png" />
    </div>

    <div class="d-flex flex-column column mx-5 justify-content-center">
        <p class="fw-bold site-text-color fs-4">Price: @Model.Bus.Price</p>
        <p class="fw-bold site-text-color fs-4">Listing Created At: @Model.Bus.CreatedAt.ToString("MM/dd/yyyy")</p>
        <p class="fw-bold site-text-color fs-4">Location: @Model.Bus.Location</p>
        <p class="fw-bold site-text-color fs-4">Manufacture Date: @Model.Bus.ManufactureDate.ToString("MM/dd/yyyy")</p>
        @if (Model.Bus.Mileage != null)
        {
            <p class="fw-bold site-text-color fs-4">Mileage: @Model.Bus.Mileage</p>
        }
        @if (Model.Bus.HorsePower != null)
        {
            <p class="fw-bold site-text-color fs-4">Horse Power: @Model.Bus.HorsePower</p>
        }
        <p class="fw-bold site-text-color fs-4">Transmission: @Model.Bus.Transmission</p>
        <p class="fw-bold site-text-color fs-4">Engine Type: @Model.Bus.EngineType</p>
        <p class="fw-bold site-text-color fs-4">Euro Standart: @Model.Bus.EuroStandart</p>
        <p class="fw-bold site-text-color fs-4">Axles Count: @Model.Bus.AxlesCount</p>
        <p class="fw-bold site-text-color fs-4">Seats Count: @Model.Bus.SeatsCount</p>
        <p class="fw-bold site-text-color fs-4">Load Capacity: @Model.Bus.LoadCapacity</p>
    </div>
</div>

@if (Model.Bus.Description != null && Model.Bus.Description != "")
{
    <p class="fw-bold site-text-darker-color fs-3">Description</p>
    <div class="border border-dark text-start mb-4">
        @if (Model.Bus.Description[Model.Bus.Description.Length - 1].ToString() != ".")
        {
            <p class="fw-bold site-text-color fs-5 px-2 pt-2 pb-2">@Model.Bus.Description.</p>
        }
        else
        {
            <p class="fw-bold site-text-color fs-5 px-2 pt-2 pb-2">@Model.Bus.Description</p>
        }
    </div>
}

<div class="mt-5">
    <h2 class="site-text-darker-color fw-bold fs-3">Vehicle Owner Info</h2>
    <p class="fw-bold site-text-color fs-5">@ownerFullName</p>
    @if (ownerNumber != null)
    {
        <p class="fw-bold site-text-color fs-5">Phone Number: @ownerNumber</p>
    }
</div>
