@page
@model TopAutoSpot.Views.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4 mt-3 mb-5 website-text-nohover fw-bold">Welcome to TopAutoSpot</h1>

    <img class="img-fluid rounded-3 pb-4" src="~/gifs/WelcomeGif.gif" alt="Welcome Gif" />

    <div class="fs-4 website-text-darker-nohover fw-bold mt-3 mb-5">
        <p>
            Here in TopAutoSpot you can Buy, Sell, Trade or Auction Vehicles!
        </p>
        <p>
            You better check out some of the options below!
        </p>
        <p>
            You might find something you are looking for!
        </p>
    </div>

    <div class="d-flex flex-row justify-content-center mt-3 mb-3">
        <div>
            <div class="border border-warning rounded mx-5 p-2">
                <img class="main-page-image" src="~/images/mainpageImages/dollarSign.png" />
            </div>
            <a asp-page="/Buy/Index" class="mt-3 fw-bold btn-outline-warning btn">BUY</a>
        </div>

        <div>
            <div class="border border-primary rounded mx-5 p-2">
                <img class="main-page-image" src="~/images/mainpageImages/tradeImage.png" />
            </div>
            <a asp-page="/Trade/Index" class="mt-3 fw-bold btn-outline-primary btn">TRADE</a>
        </div>

        <div>
            <div class="border border-success rounded mx-5 p-2">
                <img class="main-page-image" src="~/images/mainpageImages/auctionImage.jpg" />
            </div>
            <a asp-page="/Auction/Index" class="mt-3 fw-bold btn-outline-success btn">AUCTION</a>
        </div>
    </div>
</div>

