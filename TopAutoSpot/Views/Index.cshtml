@page
@model TopAutoSpot.Views.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="d-flex flex-column">
    <div class="text-center mb-5 mt-3">
        <h1 class="display-4 mt-3 mb-5 website-text-nohover fw-bold">Welcome to TopAutoSpot</h1>

        <img class="custom-rounded mb-4" src="~/gifs/WelcomeGif.gif" alt="Welcome Gif" />

        <div class="fs-4 website-text-darker-nohover fw-bold mt-3 mb-5">
            <p>
                Here in TopAutoSpot you can Buy, Sell, Trade or Auction Vehicles!
            </p>
            <p>
                You better check out some of the options below!
            </p>
            <p>
                You might find something you are looking for!
            </p>
        </div>

        <div class="d-flex flex-row justify-content-center mt-3 mb-3">
            <div>
                <div class="border border-warning custom-rounded mx-5 p-2">
                    <img class="custom-rounded main-page-image" src="~/images/mainpageImages/dollarSign.png" />
                </div>
                <a asp-page="/Buy/Index" class="mt-3 fw-bold btn-outline-warning btn">BUY</a>
            </div>

            <div>
                <div class="border border-success custom-rounded mx-5 p-2">
                    <img class="custom-rounded main-page-image" src="~/images/mainpageImages/tradeImage.png" />
                </div>
                <a asp-page="/Trade/Index" class="mt-3 fw-bold btn-outline-success btn">TRADE</a>
            </div>

            <div>
                <div class="border border-primary custom-rounded mx-5 p-2">
                    <img class="custom-rounded main-page-image" src="~/images/mainpageImages/auctionImage.jpg" />
                </div>
                <a asp-page="/Auction/Index" class="mt-3 fw-bold btn-outline-primary btn">AUCTION</a>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h1 class="website-text-nohover fw-bold">News</h1>
        <hr />  
    </div>

    <div class="border-top border-dark text-light bg-dark mb-3 mt-3 custom-rounded mx-auto">
        @if (Model.News.Count > 0)
        {

            <div class="d-flex flex-row flex-wrap justify-content-around">
                @foreach (var singleNew in Model.News)
                {
                    <div class="d-flex flex-column mx-3 single-new-box">
                        <a class="text-decoration-none" href="@singleNew.Url">
                            <img class="custom-rounded single-new-image mb-3" src="@singleNew.UrlToImage" />
                            <p class="text-light fw-bold">@singleNew.Title</p>
                        </a>
                    </div>
                }
            </div>

        }
        else
        {
            <h3 class="px-3 pt-3 pb-3 text-light">Error loading the news...</h3>
        }
    </div>

    <div>
        <hr />
    </div>
</div>