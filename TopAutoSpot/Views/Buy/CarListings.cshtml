@page
@model TopAutoSpot.Views.Buy.CarListingsModel
@{
    ViewData["Title"] = "Car Listings";
}

<div class="mb-3 mt-3">
    <h1 class="fw-bold website-text-nohover">All Car Listings</h1>
    <hr />
    <br />
    @if (Model.Cars.Count == 0)
    {
        <h3 class="text-danger fw-bold fs-4">No Cars Available :(</h3>

        <br />

        <img class="rounded-3 mt-3 mb-3" src="~/gifs/noVehicleListingsAvailable.gif" />
    }
    else
    {
        <div class="mt-3 mb-3">
            <form method="post">
                <select class="text-light website-background-main fw-bold" asp-for="@Model.OrderSetting">
                    <option value="Default">Default</option>
                    <option value="Name">Name</option>
                    <option value="NameD">Name Descending</option>
                    <option value="Created">Created Date</option>
                    <option value="CreatedD">Created Date Descending</option>
                    <option value="Price">Price</option>
                    <option value="PriceD">Price Descending</option>
                    <option value="Location">Location</option>
                    <option value="LocationD">Location Descending</option>
                    <option value="Make">Make</option>
                    <option value="MakeD">Make Descending</option>
                </select>

                <div class="form-group mt-3 mb-2">
                    <input type="submit" value="Order" class="text-light btn website-background-main fw-bold" />
                </div>
            </form>

            @*<a asp-page="/Buy/CarListings" asp-route-orderSettings="">Order By</a>*@
        </div>

        <div class="d-flex flex-row mt-3">
            @foreach (var car in Model.Cars)
            {
                <div class="d-flex flex-column mx-3 single-car ">
                    <a asp-page="/VehiclePreview/CarPreview" asp-route-id="@car.Id" class="text-decoration-none site-text-color-btn fw-bold car-title mb-1">
                        @if (!Model.HasAnyImages(car.Id))
                        {
                            <img class="listing-image rounded" src="~/images/noImageFound.png" />
                        }
                        else
                        {
                            <img class="listing-image rounded" src="@Model.GetImage(car.Id)" />
                        }

                        @if (car.Title.Length > 22)
                        {
                            <p class="fs-4 fw-bold website-text-darker listing-title">@string.Join("", car.Title.Take(22))..</p>
                        }
                        else
                        {
                            <p class="fs-4 fw-bold website-text-darker listing-title">@car.Title</p>
                        }

                        <p class="fs-6 text-dark mb-0">@car.Location</p>
                        <p class="fs-5 fw-bold website-text-main">@car.Price лв.</p>
                    </a>
                </div>
            }
        </div>
    }
</div>