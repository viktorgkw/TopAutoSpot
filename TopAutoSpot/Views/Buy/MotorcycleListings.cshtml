@page
@model TopAutoSpot.Views.Buy.MotorcycleListingsModel
@{
    ViewData["Title"] = "Motorcycle Listings";
    var interestedListings = await Model.GetInterestedVehicles();
}

<div class="mb-3 mt-3">
    <h1 class="fw-bold website-text-nohover">All Motorcycle Listings</h1>
    <hr />
    <br />

    @if (Model.Motorcycles.Count == 0)
    {
        <h3 class="text-danger fw-bold fs-4">No Motorcycles Available :(</h3>

        <br />

        <img class="custom-rounded mt-3 mb-3" src="~/gifs/noVehicleListingsAvailable.gif" />
    }
    else
    {
        <div class="mt-3 mb-3">
            <form method="post">
                <select class="text-light website-background-main fw-bold" asp-for="@Model.OrderSetting">
                    <option value="None">None</option>
                    <option value="Oldest">Oldest First</option>
                    <option value="Newest">Newest First</option>
                    <option value="Cheapest">Cheapest First</option>
                    <option value="Expensive">Expensive First</option>
                </select>

                <div class="form-group mt-3 mb-2">
                    <input type="submit" value="Order" class="text-light btn website-background-main fw-bold" />
                </div>
            </form>
        </div>

        <div class="d-flex flex-row mt-3">
            @foreach (var motorcycle in Model.Motorcycles)
            {
                <div class="d-flex flex-column mx-3 single-car ">
                    <a asp-page="/VehiclePreview/MotorcyclePreview" asp-route-id="@motorcycle.Id" class="text-decoration-none site-text-color-btn fw-bold car-title mb-1">
                        @if (!Model.HasAnyImages(motorcycle.Id))
                        {
                            <img class="listing-image custom-rounded" src="~/images/noImageFound.png" />
                        }
                        else
                        {
                            <img class="listing-image custom-rounded" src="@Model.GetImage(motorcycle.Id)" />
                        }

                        @if (motorcycle.Title.Length > 22)
                        {
                            <p class="fs-4 fw-bold website-text-darker listing-title">@string.Join("", motorcycle.Title.Take(22))..</p>
                        }
                        else
                        {
                            <p class="fs-4 fw-bold website-text-darker listing-title">@motorcycle.Title</p>
                        }

                        <p class="fs-6 text-dark mb-0">@motorcycle.Location</p>
                        <p class="fs-5 fw-bold website-text-main">@motorcycle.Price лв.</p>
                    </a>

                    @if (!interestedListings.Any(l => l.VehicleId == motorcycle.Id))
                    {
                        <a class="btn btn-outline-warning" asp-page="/InterestedIn/InterestInVehicle" asp-route-vehicleId="@motorcycle.Id" asp-route-vehicleCategory="motorcycle">💡</a>
                    }
                </div>
            }
        </div>
    }
</div>
