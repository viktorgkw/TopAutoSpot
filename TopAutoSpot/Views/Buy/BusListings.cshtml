@page
@model TopAutoSpot.Views.Buy.BusListingsModel
@{
    ViewData["Title"] = "Bus Listings";
}

<div class="mb-3 mt-3">
    <h1 class="fw-bold site-text-color">All Bus Listings</h1>
    <hr />
    <br />
    <div class="d-flex flex-row mt-3">
        @foreach (var bus in Model.Buses)
        {
            <div class="d-flex flex-column mx-3 single-car">
                <a asp-page="/VehiclePreview/BusPreview" asp-route-id="@bus.Id" class="text-decoration-none site-text-color-btn fw-bold car-title mb-4">
                    <img class="listing-image" src="~/images/noImageFound.png" />
                    @if (bus.Title.Length > 22)
                    {
                        <p class="fs-4 fw-bold listing-title">@string.Join("", bus.Title.Take(22))..</p>
                    }
                    else
                    {
                        <p class="fs-4 fw-bold listing-title">@bus.Title</p>
                    }
                    <p class="fs-6 text-dark mb-0"><i>@bus.Location</i></p>
                    <p class="fs-5 text-dark fw-bold">$@bus.Price</p>
                </a>
            </div>
        }
    </div>
</div>
