@page
@model TopAutoSpot.Views.MyVehicles.TruckCRUD.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="fw-bold text-secondary">Your Truck Details</h1>
<hr />
<br />

<div class="border border-dark rounded d-flex flex-lg-wrap bg-white mt-3 mb-3 justify-content-center">
    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.CreatedAt)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Truck.CreatedAt)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.Title)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Truck.Title)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.Make)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Truck.Make)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.Model)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Truck.Model)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.Description)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Truck.Description)</p>
        </div>
    </div>

    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.ManufactureDate)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Truck.ManufactureDate)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.Location)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Truck.Location)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.Price)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Truck.Price)</p>
        </div>
    </div>

    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.HorsePower)</p>
            <p class="fs-4 text-primary">@Html.DisplayFor(model => model.Truck.HorsePower)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.Mileage)</p>
            <p class="fs-4 text-primary">@Html.DisplayFor(model => model.Truck.Mileage)</p>
        </div>
    </div>

    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.Transmission)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Truck.Transmission)</p>
        </div>

        <div>
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.EngineType)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Truck.EngineType)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Truck.EuroStandart)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Truck.EuroStandart)</p>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary fw-bold mb-3 mt-3" asp-page="./Edit" asp-route-id="@Model.Truck?.Id">Edit</a>
    <br />
    <a class="fw-bold btn btn-outline-warning mb-3 mt-3" asp-page="/MyVehicles/Index">Go Back</a>
</div>