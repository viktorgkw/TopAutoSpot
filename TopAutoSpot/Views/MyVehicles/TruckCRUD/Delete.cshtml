@page
@model TopAutoSpot.Views.MyVehicles.TruckCRUD.DeleteModel

@{
    ViewData["Title"] = "Delete Truck";
}

<h1 class="fw-bold text-dark">Confirm Deletion</h1>
<h4 class="fw-bold text-danger">Are you sure you want to delete this Truck?</h4>
<hr />
<br />

<div class="border border-dark custom-rounded d-flex flex-lg-wrap bg-white mt-2 mb-3 justify-content-center">
    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Truck.CreatedAt)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Truck.CreatedAt)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Truck.Title)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Truck.Title)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Truck.Price)</p>
        <p class="fs-4 text-dark fw-bold">$@Html.DisplayFor(model => model.Truck.Price)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Truck.Make)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Truck.Make)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Truck.Model)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Truck.Model)</p>
    </div>

    <div class="mt-5">
        <h2 class="website-text-nohover fw-bold fs-3">All Listing Images</h2>

        <div>
            @foreach (var image in Model.Images)
            {
                <img class="mb-2 mt-2" src="@Model.GetImageSource(image)" />
            }
        </div>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Truck.Id" />
    <input type="submit" value="Delete" class="btn btn-danger fw-bold mb-3 mt-3" />
    <br />
    <a class="fw-bold btn btn-outline-secondary mb-3 mt-3" asp-page="/MyVehicles/Index">Go Back</a>
</form>