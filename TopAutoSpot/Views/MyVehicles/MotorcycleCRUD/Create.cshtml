@page
@using TopAutoSpot.Models.Utilities;
@model TopAutoSpot.Views.MyVehicles.MotorcycleCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="fw-bold website-text-darker-nohover">New Motorcycle Description</h1>
<hr />
<br />

<div class="col-md-4 mx-auto">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Motorcycle.Id" type="hidden" value=@Guid.NewGuid().ToString() />
        <input asp-for="Motorcycle.CreatedBy" type="hidden" value="BackEndHandled" />
        <input asp-for="Motorcycle.CreatedAt" type="date" value=@DateTime.Now type="hidden" />
        <input asp-for="Motorcycle.Status" type="hidden" value=@StatusTypes.WaitingApproval.ToString() />

        <div class="m-2 px-4">
            <div class="form-group mb-4">
                <label asp-for="VehicleImage.ImageData" class="control-label fw-bold website-text-nohover mb-2">Select Images</label>
                <p class="fs-6 text-danger"><i>(Required)</i></p>
                <input asp-for="VehicleImage.ImageData" name="Images" type="file" multiple>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Motorcycle.Title" class="control-label fw-bold website-text-nohover"></label>
                <input asp-for="Motorcycle.Title" class="form-control" />
                <span asp-validation-for="Motorcycle.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.Description" class="control-label fw-bold website-text-nohover"></label>
                <p class="text-dark fw-bold"><i>[Optional]</i></p>
                <input asp-for="Motorcycle.Description" class="form-control" />
                <span asp-validation-for="Motorcycle.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.Location" class="control-label fw-bold website-text-nohover"></label>
                <input asp-for="Motorcycle.Location" class="form-control" />
                <span asp-validation-for="Motorcycle.Location" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.Price" class="control-label fw-bold website-text-nohover"></label>
                <p class="text-dark fw-bold"><i>[If you set the price to 0, it will be displayed in the trade-only page!]</i></p>
                <input min="0" max="10000000" asp-for="Motorcycle.Price" class="form-control" />
                <span asp-validation-for="Motorcycle.Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.Make" class="control-label fw-bold website-text-nohover"></label>
                <input asp-for="Motorcycle.Make" class="form-control" />
                <span asp-validation-for="Motorcycle.Make" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.Model" class="control-label fw-bold website-text-nohover"></label>
                <input asp-for="Motorcycle.Model" class="form-control" />
                <span asp-validation-for="Motorcycle.Model" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.ManufactureDate" class="control-label fw-bold website-text-nohover">Manufacture Date</label>
                <p class="text-dark fw-bold"><i>[If you dont remember the exact day/month, just type 01, 01]</i></p>
                <input min="1880-00-00" max="@DateTime.Now.Year-@DateTime.Now.Month-@DateTime.Now.Day" type="date" asp-for="Motorcycle.ManufactureDate" class="form-control" />
                <span asp-validation-for="Motorcycle.ManufactureDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.HorsePower" class="control-label fw-bold website-text-nohover">Horse Power</label>
                <input min="0" max="2000" asp-for="Motorcycle.HorsePower" class="form-control" />
                <span asp-validation-for="Motorcycle.HorsePower" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.Mileage" class="control-label fw-bold website-text-nohover"></label>
                <input min="0" max="5000000" asp-for="Motorcycle.Mileage" class="form-control" />
                <span asp-validation-for="Motorcycle.Mileage" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.Transmission" class="control-label fw-bold website-text-nohover"></label>
                <select asp-for="Motorcycle.Transmission" class="form-select">
                    <option value="Automatic">Automatic</option>
                    <option value="Manual">Manual</option>
                </select>
                <span asp-validation-for="Motorcycle.Transmission" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.EngineType" class="control-label fw-bold website-text-nohover">Engine Type</label>
                <select asp-for="Motorcycle.EngineType" class="form-select">
                    <option value="Gasoline">Gasoline</option>
                    <option value="Electric">Electric</option>
                    <option value="Hybrid">Hybrid</option>
                </select>
                <span asp-validation-for="Motorcycle.EngineType" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.CubicCapacity" class="control-label fw-bold website-text-nohover">Cubic Capacity</label>
                <input min="0" max="2500" asp-for="Motorcycle.CubicCapacity" class="form-control" />
                <span asp-validation-for="Motorcycle.CubicCapacity" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.EngineStrokes" class="control-label fw-bold website-text-nohover">Engine Strokes</label>
                <select asp-for="Motorcycle.EngineStrokes" class="form-select">
                    <option value="2">2 Stroke</option>
                    <option value="4">4 Stroke</option>
                </select>
                <span asp-validation-for="Motorcycle.EngineStrokes" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Motorcycle.CoolingType" class="control-label fw-bold website-text-nohover">Cooling Type</label>
                <select asp-for="Motorcycle.CoolingType" class="form-select">
                    <option value="AirCooled">AirCooled</option>
                    <option value="LiquidCooled">LiquidCooled</option>
                </select>
                <span asp-validation-for="Motorcycle.CoolingType" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-2">
                <input type="submit" value="Create" class="btn website-background-lighter fw-bold" />
            </div>
        </div>
    </form>
</div>

<div>
    <a class="fw-bold btn btn-outline-secondary mt-3 mb-3" asp-page="/MyVehicles/Index">Go Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
