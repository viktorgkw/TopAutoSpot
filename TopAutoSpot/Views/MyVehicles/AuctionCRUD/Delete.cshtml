@page
@model TopAutoSpot.Views.MyVehicles.AuctionCRUD.DeleteModel
@{
    ViewData["Title"] = "Delete Auction";
}

<h1 class="fw-bold text-dark">Confirm Deletion</h1>
<h4 class="fw-bold text-danger">Are you sure you want to delete this Auction?</h4>
<hr />
<br />

<div class="border border-dark custom-rounded d-flex flex-lg-wrap bg-white mt-2 mb-3 justify-content-center">
    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Auction.Id)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Auction.Id)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Auction.Title)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Auction.Title)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Auction.Description)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Auction.Description)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Auction.StartingPrice)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Auction.StartingPrice)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Auction.Duration)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Auction.Duration)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Auction.StartDay)</p>
        <p class="fs-4 text-dark fw-bold">@Model.Auction.StartDay.ToString("MM/dd/yyyy")</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Auction.StartHour)</p>
        <p class="fs-4 text-dark fw-bold">@Model.Auction.StartHour.Hour</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">@Html.DisplayNameFor(model => model.Auction.VehicleId)</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Auction.VehicleId)</p>
    </div>

    <div class="p-3">
        <p class="fs-3 fw-bold website-text-nohover">Bidders Count</p>
        <p class="fs-4 text-dark fw-bold">@Html.DisplayFor(model => model.Auction.Bidders.Count)</p>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Auction.Id" />
    <input type="submit" value="Delete" class="btn btn-danger fw-bold mb-3 mt-3" />
    <br />
    <a class="fw-bold btn btn-outline-secondary mb-3 mt-3" asp-page="/MyVehicles/Index">Go Back</a>
</form>