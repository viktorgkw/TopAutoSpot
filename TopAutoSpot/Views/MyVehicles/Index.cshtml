@page
@model TopAutoSpot.Views.MyVehicles.IndexModel
@{
    ViewData["Title"] = "My Vehicles";
}

<h1 class="mb-3 mt-4">@ViewData["Title"]</h1>
<hr />

<p><i>Here you will see all your vehicles.</i></p>
<hr />

<p class="text-info fw-bold">Add new:</p>
@*TODO => Add routing*@
<a class="btn btn-outline-info fw-bold mt-2" asp-page="/CarModelCRUD/Create">Car</a>
<a class="btn btn-outline-info fw-bold mt-2" asp-page="/TruckModelCRUD/Create">Truck</a>
<a class="btn btn-outline-info fw-bold mt-2" asp-page="/TrailerModelCRUD/Create">Trailer</a>
<a class="btn btn-outline-info fw-bold mt-2" asp-page="/MotorcycleModelCRUD/Create">Motorcycle</a>
<a class="btn btn-outline-info fw-bold mt-2" asp-page="/BoatModelCRUD/Create">Boat</a>
<a class="btn btn-outline-info fw-bold mt-2" asp-page="/BusModelCRUD/Create">Bus</a>
<hr />

@*Add /$id*@
<a class="btn btn-outline-warning fw-bold mt-3 mb-3" asp-page="/CarModelCRUD/Details">R</a>
<a class="btn btn-outline-warning fw-bold mt-3 mb-3" asp-page="/CarModelCRUD/Edit">U</a>
<a class="btn btn-outline-warning fw-bold mt-3 mb-3" asp-page="/CarModelCRUD/Delete">D</a>
<a class="btn btn-outline-warning fw-bold mt-3 mb-3" asp-page="/CarModelCRUD/Index">I</a>

<br />

@if (Model.OverallCount == 0)
{
    <img class="rounded-3 mt-3 mb-3" src="~/gifs/noVehicles.gif" />
}
else
{
    // Display all available vehicles.
}