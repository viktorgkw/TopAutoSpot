@page
@model TopAutoSpot.Views.MyVehicles.BusCRUD.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="fw-bold text-secondary">Your Bus Details</h1>
<hr />
<br />

<div class="border border-dark rounded d-flex flex-lg-wrap bg-white mt-3 mb-3 justify-content-center">
    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.Title)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Bus.Title)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.Description)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Bus.Description)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.Make)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Bus.Make)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.Model)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Bus.Model)</p>
        </div>
    </div>

    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.CreatedAt)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Bus.CreatedAt)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.Mileage)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Bus.Mileage)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.ManufactureDate)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Bus.ManufactureDate)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.Location)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Bus.Location)</p>
        </div>

        <div>
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.EuroStandart)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Bus.EuroStandart)</p>
        </div>

        <div>
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.Transmission)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Bus.Transmission)</p>
        </div>
    </div>

    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.Price)</p>
            <p class="fs-4 text-primary">@Html.DisplayFor(model => model.Bus.Price)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.HorsePower)</p>
            <p class="fs-4 text-primary">@Html.DisplayFor(model => model.Bus.HorsePower)</p>
        </div>
    </div>

    <div class="flex-column m-2 px-4">
        <div>
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.EngineType)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Bus.EngineType)</p>
        </div>

        <div>
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.AxlesCount)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Bus.AxlesCount)</p>
        </div>

        <div>
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.SeatsCount)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Bus.SeatsCount)</p>
        </div>

        <div>
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Bus.LoadCapacity)</p>
            <p class="fs-4 text-secondary">@Html.DisplayFor(model => model.Bus.LoadCapacity)</p>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary fw-bold mb-3 mt-3" asp-page="./Edit" asp-route-id="@Model.Bus?.Id">Edit</a>
    <br />
    <a class="fw-bold btn btn-outline-warning mb-3 mt-3" asp-page="/MyVehicles/Index">Go Back</a>
</div>