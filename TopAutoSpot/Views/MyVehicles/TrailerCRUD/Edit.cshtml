@page
@using TopAutoSpot.Data.Entities.Utilities;
@model TopAutoSpot.Views.MyVehicles.TrailerCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="fw-bold text-dark">Edit Trailer </h1>
<hr />
<br />

<div class="col-md-4 mx-auto">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Trailer.Id" />
        <input type="hidden" asp-for="Trailer.CreatedBy" />
        <input type="hidden" asp-for="Trailer.CreatedAt" />
        <input asp-for="Trailer.Status" type="hidden" value=@StatusTypes.WaitingApproval.ToString() />

        <div class="m-2 px-4">
            <div class="form-group mb-4">
                <label asp-for="VehicleImage.ImageData" class="control-label fw-bold website-text-nohover mb-2">Select Images</label>
                <input asp-for="VehicleImage.ImageData" name="Images" type="file" multiple>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Trailer.Title" class="control-label fw-bold website-text-nohover"></label>
                <input asp-for="Trailer.Title" class="form-control" />
                <span asp-validation-for="Trailer.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Trailer.Description" class="control-label fw-bold website-text-nohover"></label>
                <input asp-for="Trailer.Description" class="form-control" />
                <span asp-validation-for="Trailer.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Trailer.Location" class="control-label fw-bold website-text-nohover"></label>
                <input asp-for="Trailer.Location" class="form-control" />
                <span asp-validation-for="Trailer.Location" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Trailer.Price" class="control-label fw-bold website-text-nohover"></label>
                <input min="0" asp-for="Trailer.Price" class="form-control" />
                <span asp-validation-for="Trailer.Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Trailer.ManufactureDate" class="control-label fw-bold website-text-nohover">Manufacture Date</label>
                <input min="1880-00-00" max="@DateTime.Now.Year-@DateTime.Now.Month-@DateTime.Now.Day" type="date" asp-for="Trailer.ManufactureDate" class="form-control" />
                <span asp-validation-for="Trailer.ManufactureDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Trailer.Payload" class="control-label fw-bold website-text-nohover"></label>
                <input min="0" max="15000" asp-for="Trailer.Payload" class="form-control" />
                <span asp-validation-for="Trailer.Payload" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Trailer.AxleCount" class="control-label fw-bold website-text-nohover">Axle Count</label>
                <select asp-for="Trailer.AxleCount" class="form-select">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
                <span asp-validation-for="Trailer.AxleCount" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-2">
                <input type="submit" value="Save" class="btn website-background-lighter text-light fw-bold mb-3" />
            </div>
        </div>
    </form>
</div>

<div class="mt-3 mb-3">
    <a class="fw-bold btn btn-outline-secondary" asp-page="/MyVehicles/Index">Go Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
