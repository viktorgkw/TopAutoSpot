@page
@model TopAutoSpot.Views.MyVehicles.TrailerCRUD.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<h1 class="fw-bold text-secondary">Confirm Deletion</h1>
<h4 class="fw-bold text-danger">Are you sure you want to delete this Trailer?</h4>
<hr />
<br />

<div class="border border-dark rounded d-flex flex-lg-wrap bg-light mt-3 mb-3 justify-content-center">
    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Trailer.CreatedAt)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Trailer.CreatedAt)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Trailer.Title)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Trailer.Title)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Trailer.Description)</p>
            <p class="fs-4 text-warning">@Html.DisplayFor(model => model.Trailer.Description)</p>
        </div>
    </div>

    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Trailer.Price)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Trailer.Price)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Trailer.ManufactureDate)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Trailer.ManufactureDate)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Trailer.Location)</p>
            <p class="fs-4 site-text-color">@Html.DisplayFor(model => model.Trailer.Location)</p>
        </div>
    </div>

    <div class="flex-column m-2 px-4">
        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Trailer.Payload)</p>
            <p class="fs-4 text-primary">@Html.DisplayFor(model => model.Trailer.Payload)</p>
        </div>

        <div class="p-3">
            <p class="fs-3 fw-bold text-dark">@Html.DisplayNameFor(model => model.Trailer.AxleCount)</p>
            <p class="fs-4 text-primary">@Html.DisplayFor(model => model.Trailer.AxleCount)</p>
        </div>
    </div>
</div>
    
<form method="post">
    <input type="hidden" asp-for="Trailer.Id" />
    <input type="submit" value="Delete" class="btn btn-danger fw-bold mb-3 mt-3" />
    <br />
    <a class="fw-bold btn btn-outline-warning mb-3 mt-3" asp-page="/MyVehicles/Index">Go Back</a>
</form>